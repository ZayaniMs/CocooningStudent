{% extends ":default:base.html.twig" %}


{% block body %}
    {% include ':default:menuLogin.html.twig' %} 
{% endblock %}

{% block main_content %}

    <section id="service" class="home-section color-dark bg-gray">


        <div class="text-center">
            <div class="container">

                <div class="row">
                    <div class=".col-md-3 .col-md-offset-3">
                        <div class="wow fadeInLeft" data-wow-delay="0.2s">
                            <div class="service-box">
                                <div class="service-icon">
                                    <span class="fa fa-home fa-5x"></span> 
                                </div>
                                <div class="service-desc">						
                                    <h5>Proprietaire</h5>
                                    <p>
                                        Ad denique euripidis signiferumque vim, iusto admodum quo cu. No tritani neglegentur mediocritatem duo.
                                    </p>
                                    <a href="" class="btn btn-skin">Plus d'informations</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    

                    </section>
                    <!-- /Section: services -->

                    <div class='container'> 
                        <div class="row">
                            <div class="col-sm-6 col-md-4 col-md-offset-4">
                                <form class="form-signin" method="POST" action="{{path('loginPro',{id:''})}}" data-validate="parsley">
                                    <h2 class="form-signin-heading">se  connecter</h2>
                                    <label for="email" class="sr-only">Email address</label>
                                    <input type="text" id="email" class="form-control" name="email" placeholder="mail" data-trigger="change" data-require="true">
                                    <label for="inputPassword" class="sr-only">Password</label>
                                    <input type="password" id="mdp" class="form-control" name="mdp" placeholder="Password" required>
                                        </br>
                                    <div class="text-center"><button type="submit" class="btn btn-success">Connexion</button></div>

                                    <a href="{{path('Signup_homepage')}}">creer un compte</a>
                                </form>
                            </div>

                        </div>
                    </div>
                    {% if erreur is defined %}
                        <div class="alert-info fade in">
                            <strong>{{erreur}}</strong> 
                        </div>
                    {%endif%}

                {% endblock %}




                {% block footer %}

                    {% include ':default:footer.html.twig' %} 

                {% endblock %}