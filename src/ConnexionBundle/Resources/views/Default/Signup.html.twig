            <label>Password</label>
            <input type="password" name="password" class="input-xlarge"></br>
            <label>Nom</label>
            <input type="text" name="nom" class="input-xlarge"></br>
            <label>Email</label>
            <input type="text" name="email" class="input-xlarge"></br>
            <label>Telephone</label>
            <input type="text" name="telephone" class="input-xlarge">
            <div>
                <button  class="btn btn-secondary" type="submit" value='inscription'<a href="{{path('connexion_homepage')}}">Inscription</button>
            </div>
        </form>

    </div> 
